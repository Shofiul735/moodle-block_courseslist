<h3>{{ title }}</h3>

<form method="GET">
  <select
    style="padding: 10px; margin-bottom: 10px"
    name="categories"
    id="categories"
  >
    {{#categories}}
    <option value="{{ cat }}">{{ cat }}</option>
    {{/categories}}
  </select>
  <button type="submit">Filter</button>
</form>

{{#content}}
<p class="card flex-row justify-content-between">
  <a
    style="cursor: pointer"
    onclick="location.href='http://localhost/moodle/course/view.php?id={{
      id
    }}'"
    >{{ fullname }}</a
  >
  <span class="mr-3"> {{ total_student }} </span>
</p>
{{/content}}

<ul class="pagination justify-content-center">
  {{#pages}}
  <li class="page-item">
    <a
      class="page-link"
      style="cursor: pointer"
      onclick="location.href='{{ pageUrl }}?id={{ page }}'"
      >{{ page }}</a
    >
  </li>
  {{/pages}}
</ul>
